<?xml version="1.0" ?>
<?xml-stylesheet type="text/xsl" href="pvlist.xsl" ?>

<!-- You can edit this file with a text editor -->

<pvwatch version="1.0">
	<!-- (update version if format of XML file changes) -->

  <definition name="mne">
  	one-word mnemonic reference used in python and xslt code
  	(mne should be unique for each EPICS_PV)
  </definition>
  <definition name="PV">
  	EPICS process variable name (must be used in only one EPICS_PV)
  </definition>
  <definition name="description">
  	useful text informative to others
  </definition>
  <definition name="display_format">
  	(optional, default="%s") PVs will be formatted for display with this string
  </definition>
  <definition name="_ignore_">
  	(optional, default="false") this PV is ignored if value is not "false"
  </definition>


  <EPICS_PV PV="vbox:TOD" 				description="IOC current time"  	mne="tod"/>
  <EPICS_PV PV="vbox:STARTTOD" 			description="IOC boot time"  		mne="starttod"/>
  <EPICS_PV PV="vbox:HOSTNAME"			description="IOC host name" 		mne="hostname"/>
  <EPICS_PV PV="vbox:ENGINEER"			description="engineer" 				mne="engineer"/>

  <EPICS_PV PV="vbox:m1.DMOV"  description="VDM_Stripe motor done moving" mne="VDM_Stripe_dmov"/>
  <EPICS_PV PV="vbox:m1.RBV"   description="VDM_Stripe motor, mm" display_format="%.3f" mne="VDM_Stripe"/>
  <EPICS_PV PV="vbox:m2.DMOV"  description="DCM_theta motor done moving" mne="DCM_theta_dmov"/>
  <EPICS_PV PV="vbox:m2.RBV"   description="DCM_theta motor, mm" display_format="%.6f" mne="DCM_theta"/>

  <EPICS_PV PV="vbox:alldone" description="all motors done moving" mne="vbox_alldone"/>
  <EPICS_PV PV="vbox:moving" description="number of motors moving" mne="vbox_moving"/>

</pvwatch>
